<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--set方法注入-->
    <bean id="book" class="com.xiaonaol.bean.di.Book">
        <property name="bname" value="前端开发"></property>
        <property name="author" value="xiaonaol"></property>
<!--        null值的处理-->
<!--        <property name="others">-->
<!--            <null></null>-->
<!--        </property>-->
<!--        特殊字符转义-->
<!--        <property name="others" value="&lt;&gt;"></property>-->
<!--        CDATA区写特殊符号-->
        <property name="others">
            <value><![CDATA[a < b]]></value>
        </property>
    </bean>

    <!--构造器注入-->
    <bean id="bookCon" class="com.xiaonaol.bean.di.Book">
        <constructor-arg name="bname" value="java开发"></constructor-arg>
        <constructor-arg name="author" value="xiaonaol"></constructor-arg>
    </bean>
</beans>